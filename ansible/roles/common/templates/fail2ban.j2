[DEFAULT]
ignoreip  = 127.0.0.1 {{ ansible_default_ipv4.address }}
bantime   = 86400
destemail = {{ admin_email }}
banaction = iptables-multiport
action    = %(action_)s

# JAILS
[sshd]
enabled   = true
maxretry  = 3

[pam-generic]
enabled   = true
banaction = iptables-allports

[sshd-ddos]
enabled   = true
