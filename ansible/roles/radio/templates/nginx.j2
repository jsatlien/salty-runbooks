server {
  listen 443 ssl;

  ssl_certificate      {{ ssl_certroot }}/fullchain.pem;
  ssl_certificate_key  {{ ssl_certroot }}/privkey.pem;
  ssl_dhparam          /etc/nginx/ssl/dhparam.pem;
  ssl_session_timeout  1d;
  ssl_session_cache    shared:SSL:50m;
  ssl_session_tickets  off;
  ssl_protocols        TLSv1 TLSv1.1 TLSv1.2;
  add_header           Strict-Transport-Security max-age=15768000;

  server_name   {{ groovebasin_domain }};
  access_log    /var/log/nginx/{{ groovebasin_domain }}/access.log;
  error_log     /var/log/nginx/{{ groovebasin_domain }}/error.log error;

  location / {
    auth_basic "Restricted Access";
    auth_basic_user_file /etc/nginx/htpasswd;

    proxy_pass http://0.0.0.0:16242/;
    proxy_http_version 1.1;
    proxy_cache_bypass $http_upgrade;
    proxy_set_header Authorization "";
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}

server {
  listen 80;
  server_name   {{ groovebasin_domain }};
  return 301    https://$server_name$request_uri;
}
